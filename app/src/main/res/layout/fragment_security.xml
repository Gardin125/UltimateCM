<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#818083"
    android:padding="16dp"
    tools:context=".SecurityFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security Settings"
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="#d9a737"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here you can change you password by using your email. (password change link will be sent to your email)."
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#d9a737"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnPasswordReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:layout_marginTop="200dp"
        android:backgroundTint="#d9a737"
        android:textColor="#818083"
        android:textAllCaps="false"
        android:textSize="20dp"

        android:layout_marginBottom="16dp"/>





</FrameLayout>