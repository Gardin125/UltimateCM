<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#949398"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="Select Date"
            android:textAllCaps="false"
            android:textColor="#949398" />

        <Button
            android:id="@+id/btnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:background="@drawable/custom_yellow_button"
            android:text="Select Time"
            android:textAllCaps="false"
            android:textColor="#d9a737" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/btnChangeLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:background="@drawable/custom_yellow_button"
            android:text="Location"
            android:textAllCaps="false"
            android:textColor="#d9a737"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnChangeTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="Tags"
            android:textAllCaps="false"
            android:textColor="#949398"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Private"
            android:textColor="#d9a737"
            android:textSize="30dp"
            android:layout_marginRight="60dp"/>

        <Switch
            android:id="@+id/swhPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <Button
        android:id="@+id/btnSave"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#949398"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_yellow_button"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#d9a737"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="10dp"
        android:textColor="#FF0000"
        android:textSize="20dp" />

</LinearLayout>